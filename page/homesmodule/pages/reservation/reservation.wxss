page {
  background-color: #F0F0F3; /* 设置背景颜色#f0f0f0; */
}



.backgroundBox{
  width: 100%;
  height: 100vh;
  position: relative;
}

/* 顶部导航 */
.shangmbubox{
  width: 100%;
  height: 90rpx;
  background-color: #F0F0F3;
  position: relative;
  top: 0;
  left: 0;
  padding-top: 95rpx;
}
.dohangind{
  width: 300rpx;
  height: auto;
  margin: auto;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
}
/* 上面用的流程图 */
.upperNavigation{
  width: calc(100%-60rpx);
  height: auto;
  margin: 30rpx;
  display:flex;
  justify-content:space-between;
}
.lliucheng{
  width: 268rpx;
  height: auto;
  position: relative;
}
.orderProcessing{
  width: 100%;
  height: 120rpx;
}
.orderProcessFing{
  width: 240rpx;
  height: 90rpx;
  margin: auto;
}
/* 分割符号 */
.arrow{
width: 20rpx;
height: 30rpx;
margin:auto;
margin: 30rpx;
}
.downArrow{
  width: 30rpx;
  height: 20rpx;
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translateX(-50%);
}
/* 下拉框上部分盒子 */
.uoContentBox {
  width: calc(100%-60rpx);
  height: auto;
  margin: 5rpx 30rpx;
  overflow: hidden;
}
/* 下拉框滑动块样式 */
.scroll-x {
  width: 100%;
  height: auto;
  white-space: nowrap;
  display: flex;
  justify-content: space-around;
  
}
.scroll-content {
  display: inline-block;
  width: 100%; /* 设置滚动内容的宽度超过 scroll-view 的宽度 */
  position: relative; /* 设置相对定位，以便子元素绝对定位 */
}

.underline {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background-color: #000; /* 横线颜色，可根据需要调整 */
}

.acts {
  width: 150rpx;
  height: 230rpx;
  margin: 20rpx 13rpx;
  padding-top: 20rpx;
  border-radius: 30rpx;
  overflow: hidden;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.zanshi {
  background-color: rgb(178, 247, 247);
  opacity: 0.5;
  color: rgb(55, 195, 238);
  border: slateblue solid 1px;
}

/* 块的样式 */
.activity_photo {
  width: 150rpx;
  height: 150rpx;
