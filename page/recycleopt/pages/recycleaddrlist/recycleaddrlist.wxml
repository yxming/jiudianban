  <view class="container">
    <view class="radio-group">
      <block wx:for="{{recycleArray}}" wx:key="index" id="{{index}}">
        <t-swipe-cell right="{{right}}" bind:touchstart="onTouchStart" bind:touchmove="onTouchMove" bind:touchend="onTouchEnd">
