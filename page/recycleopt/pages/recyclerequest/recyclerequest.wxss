  top: 15rpx;
  left: 15rpx;
  border-radius: 15rpx;
}
.notice{
  width: calc(100%-60rpx);
  height: auto;
  padding: 30rpx;
  padding-left: 60rpx;
  color: #A4A4A4;
  font-style: 12rpx;
  /* background-color: #19A852; */
}
/* 底部同意按钮 */
.Doradio{
  width: auto;
  height: auto;
  display: flex;
  color: #A4A4A4;
}
.option {
  width: 340rpx;
  margin: auto;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 10rpx;
}

.label {
  font-size: 24rpx;
}

.option.selected .icon {
  filter: invert(50%);
}

.option.selected .label {
  color: green;
}

/* 底部按钮 */
.Dbutton {
  width: 492rpx;
  height: 108rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: auto;
  font-weight: bold;
  background-color: #19A852;
}
.Dbuttons{
  width: 492rpx;
