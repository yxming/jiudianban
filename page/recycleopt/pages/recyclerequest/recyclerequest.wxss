/* page/user/recyclerequest/recyclerequest.wxss */
.btn {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 100%;
  color: white;
}

.t-input {
  margin-bottom: 32rpx;
}

.backgroundBlock {
  width: 100%;
  height: auto;
  padding-top: 50rpx;
  position: relative;
}

.upbox {
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  position: absolute;
  top: -40rpx;
  left: 0;
  border-radius: 30rpx;
}

/* 背景快 */
.backgroundimageBlock {
  width: 672rpx;
  height: 142rpx;
  margin: auto;
  z-index: 0;
  position: relative;
  top: -50rpx;
}

.inputBlock {
  width: 400rpx;
  height: 65rpx;
  z-index: 999;
  margin: auto;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  border-radius: 15rpx;
  padding-left: 50rpx;
}
.limage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 55%;
  left: 50rpx;
  transform: translateY(-50%);
  z-index: 9000;
}
.pictureRight{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: -25rpx;
  top: 53%;
  transform: translateY(-50%);
  z-index: 9000;
  border-radius: 15rpx;
  overflow: hidden;
}
.limages{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 60%;
  transform: translateY(-50%);
  left: 50rpx;
  z-index: 9000;
}
/* 第二个输入块 */
.backgroundimageBBlock{
  width: 672rpx;
  height: 100rpx;
  margin: auto;
  position: relative;
  top: -30rpx;
}
.inputFast{
  width: 595rpx;
  height: 20rpx;
  z-index: 999;
  margin: auto;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  border-radius: 15rpx;
}
.notice{
  width: calc(100%-60rpx);
  height: 350rpx;
  padding: 30rpx;
  padding-left: 60rpx;
  color: #A4A4A4;
  font-style: 14rpx;
}
/* 底部同意按钮 */
.Doradio{
  width: auto;
  height: 50rpx;
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  color: #A4A4A4;
}
.option {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 10rpx;
}

.label {
  font-size: 16px;
}

.option.selected .icon {
  filter: invert(50%);
}

.option.selected .label {
  color: green;
}

/* 底部按钮 */
.Dbutton {
  width: 492rpx;
  height: 108rpx;
  background-color: #19A852;
  border-radius: 50rpx;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  font-weight: bold;
}
.Dbuttons{
  width: 492rpx;
  height: 108rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  font-weight: bold;
  background-color: rgb(119, 119, 119);
}