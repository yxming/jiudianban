page {
  background-color: #F0F0F3; /* 设置背景颜色#f0f0f0; */
}

.backgroundBlock {
  width: 100%;
  height: 100%;
  padding-top: 50rpx;
  position: relative;
  background-color: #F0F0F3;
}

.upbox {
  width: 100%;
  height: 100rpx;
  background-color: #F0F0F3;
  position: absolute;
  top: -40rpx;
  left: 0;
  border-radius: 30rpx;
}

/* 背景快 */
.backgroundimageBlock {
  width: 672rpx;
  height: 142rpx;
  margin: auto;
  z-index: 0;
  position: relative;
  top: -50rpx;
}

.inputBlock {
  width: 340rpx;
  height: 65rpx;
  z-index: 999;
  margin: auto;
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  border-radius: 15rpx;
  padding-left: 50rpx;
}
.limage{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 55%;
  left: 50rpx;
  transform: translateY(-50%);
  z-index: 9000;
}
.pictureRight{
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  right: -25rpx;
  top: 53%;
  transform: translateY(-50%);
  z-index: 9000;
  border-radius: 15rpx;
  overflow: hidden;
}
.limages{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 60%;
  transform: translateY(-50%);
  left: 50rpx;
  z-index: 9000;
}
/* 第二个输入块 */
