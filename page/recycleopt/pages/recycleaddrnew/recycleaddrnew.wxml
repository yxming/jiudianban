  <view class="container">
    <view class="radio-group">
      <block style="width: 100rpx;height: 400rpx;background-color:blue; " wx:for="{{communityArray}}" wx:key="index" id="{{index}}">
        <view class="radio-item">
          <image class="radioItemimage" src="../image/Rectang.png" mode="" />
          <view class="contentBox">
            <view class="contentupBox">{{item.name}}</view>
            <view class="contentDBox">{{item.addr}}</view>
          </view>
          <view class="icon-container" bindtap="handleRadioChange" data-index="{{index}}">
            <image class="icon" src="{{index === selected ? '../image/Rectangles.png' : '../image/rectanglet.png'}}"></image>
          </view>
        </view>
      </block>
    </view>
  </view>

  <view class="inputContactsBox">
    <view class="imageBox">
      <image style="width: 100%;height: 100%;" src="../image/Group.png" mode="" />
    </view>
    <t-input style="width: calc(100%-120rpx);height: calc(100%-60rpx);  " borderless="false" placeholder="请输入联系人" model:value="{{caller}}"></t-input>
  </view>
  <view class="inputContactsBox">
    <view class="imageBox">
      <image style="width: 100%;height: 100%;" src="../image/Groupt.png" mode="" />
    </view>
    <t-input borderless="false" placeholder="请输入门牌号" model:value="{{flat}}" status="error" />
  </view>
  <view class="inputContactsBox">
    <view class="imageBox">
      <image style="width: 100%;height: 100%;" src="../image/Groups.png" mode="" />
    </view>
    <t-input borderless="false" placeholder="输入手机号码" model:value="{{phoneNumber}}" type="number" tips="{{phoneError ? '手机号输入不正确' : ''}}" bindchange="onPhoneInput">
      <view slot="suffix" style="display: flex; align-items: center">
        <view class="suffix--line"></view>
      </view>
    </t-input>
  </view>
