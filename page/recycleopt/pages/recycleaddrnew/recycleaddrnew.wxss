.t-radio-padding {
  padding: 24rpx 32rpx !important;
}

.t-radio-demo {
  margin-top: 16px;
}

.disable-border {
  display: none;
}

.tips {
  text-align: right !important;
}

.suffix {
  display: flex;
  align-items: center;
}

.suffix--line {
  width: 1px;
  height: 24px;
  background-color: #f6f6f6;
  margin-right: 16px;
}

.verify {
  color: rgba(0, 82, 217, 1);
  font-size: 32rpx;
}

.image {
  width: 72px;
  height: 36px;
  display: block;
  margin-top: -6px;
  margin-bottom: -6px;
}
.inputContactsBox{
  width: 100%; 
  height: 96rpx;
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid rgb(192, 192, 192);
  padding-bottom: 30rpx;
  display: flex;
}
.imageBox{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 90rpx;
}
/* 页面单选 */
.container {
  width: 100%;
  height: auto;
  margin-bottom: 30rpx;
}

.radio-group {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
.radio-item {
  width: 100%;
  height: 200rpx;
  position: relative;
  display: flex;
  align-items: center;
  /* border-bottom: 1rpx solid #d1d1d1; */
}
.radioItemimage{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.radio-item text {
  margin-left: 10px;
  z-index: 111;
}
.contentBox{
  width: 550rpx;
  height: 150rpx;
  padding: 35rpx 0 20rpx 60rpx;
  z-index: 9000;
}
.contentupBox{
  width: 100%;
  height: 70rpx;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.contentDBox{
  width: 500rpx;
  height: 90rpx;
  font-size: 28rpx;
  color: rgb(187, 187, 187);
}
.icon-container{
  width: 88rpx;
  height: 88rpx;
  z-index: 9900;
}
.icon{
  width: 100%;
  height: 100%;
}
/* 底部按钮 */
.bottomButton {
  width: 492rpx;
  height: 165rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}